<h1><%= t '.title', course_name: @courses_subject.course.name %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:supervisor, @courses_subject.course, @courses_subject] do |f| %>
      <div class="form-group">
      <%= collection_check_boxes :courses_subject, :task_ids, 
          @courses_subject.subject.tasks, :id, :name do |b| %>
          <%=  b.check_box %> <%=  b.label %></br>
      <% end %>
    </div>
    <center><%= f.submit t '.submit', class: "btn btn-primary btn-lg" %></center>
    <% end %>
  </div>
</div>