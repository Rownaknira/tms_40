<h1><%= t '.title' %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:supervisor, @course] do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>
      <div class="form-group">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: 'datepicker', id: 'sd', readonly: true %>
      </div>
      <div class="form-group">
        <%= f.label :end_date %>
        <%= f.date_field :end_date, class: 'datepicker', id: 'ed', readonly: true %>
      </div>
      <div class="form-group">
        <%= collection_check_boxes :course, :subject_ids,Subject.all, :id, :name do |b| %>
          <%=  b.check_box %> <%=  b.label %></br>
        <% end %>
      </div>
    <center><%= f.submit t '.submit', 
        class: "btn btn-primary btn-lg" %></center>
  <% end %>
</div>
</div>